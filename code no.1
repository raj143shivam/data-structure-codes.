#include <stdio.h>

int main() {
    int n1, n2, i;

    
    printf("Enter the size of the array: ");
    scanf("%d", &n1); 

    int *arr = (int *)malloc(n1 * sizeof(int));

    printf("Enter %d values for the initial array:\n", n1);
    for (i = 0; i < n1; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter the number of additional elements to be added: ");
    scanf("%d", &n2);

    arr = (int *)realloc(arr, (n1 + n2) * sizeof(int));

    printf("Enter %d values to be added to the array:\n", n2);
    for (i = n1; i < n1 + n2; i++) {
        scanf("%d", &arr[i]);
    }
    printf("Array with all values:\n");
    for (i = 0; i < n1 + n2; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");
    free(arr);

    return 0;
}
